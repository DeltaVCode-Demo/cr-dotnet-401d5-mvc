@page
@model DemoMvc.Pages.IndexModel
@{
    //Layout = "_Layout";
}

<h1>Hello from Razor Pages!</h1>
<p>Model type is @Model.GetType().FullName</p>
<p>Page was generated at @Html.DisplayFor(model => model.PageGeneratedAt)</p>

<a asp-page="RazorPageTest">Razor Test Page!</a>

<a asp-page="RPFamily/Index">Razor Pages Families</a>

<h2>New Families!</h2>

@foreach (var fam in Model.NewFamilies)
{
    <li>
        <a asp-page="Family" asp-route-id="@fam.Id">@fam.Name</a>
        @if (User.IsInRole("Administrator"))
        {
            <text>(<a asp-controller="Families" asp-action="Details" asp-route-id="@fam.Id">Admin</a>)</text>
        }
    </li>
}
